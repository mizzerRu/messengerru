<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_contacts_layout"
    android:background="#FF2C2C2C"
    tools:context=".MembersList.SearchContactActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/findMember"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColorHint="#FFFFFF"
        app:queryHint="Enter the number"
        app:searchHintIcon="@drawable/searchiconpoisk"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_searchContact"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/findMember"
        app:layout_constraintStart_toStartOf="@+id/findMember"
        app:layout_constraintTop_toBottomOf="@+id/findMember" />


</androidx.constraintlayout.widget.ConstraintLayout>